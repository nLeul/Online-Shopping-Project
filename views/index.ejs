<body>
    <%- include('./includes/navigation') %>
    <div class="main-content">
        <div class="section-content section-content-p30">
            <div class="container-fluid">
                <div class="row">
                    <% for(let products of productsList){ %>
                        <div class="col-md-3">
                            <div class="panel panel-info">
                                <div class="flex-container">

                            <div class="panel-body"><img src="<%=products.image%>" class="img-responsive" alt="image not found"></div>
                             </div> <div class="panel-body">
                            <h3> <%=products.name%></h3>
                            <h5>Price: <%=products.price%><span>&#36</span></h5>
                           <a href="/details/<%=products._id%>" class="btn btn-warning">View Details</a>
                        </div>
                    </div>
                  </div>
                    <% }%>

                </div>

                </div>

            </div>

        </div>

    </div>


    <%- include('./includes/footer')%>
</body>

