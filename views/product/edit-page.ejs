<%- include('../fragments/head.ejs') %>

<body>

    <%- include('../fragments/navigation.ejs') %>

    <div class="main-content">
        <div class="section-content section-content-p30">
            <div class="container-fluid">
                <div class="row">

                    <!-- below is add form ====>  start   -->

                    <form action="/post-prod" method="POST">
                        <div class="form-row">
                            <input type="hidden" name="id" class="form-control" id="inputEmail4"
                                value="<%=product._id%>" readonly>

                            <div class="form-group col-md-6">
                                <label for="inputPassword4">Product Name</label>
                                <input type="text" name="name" class="form-control" id="inputPassword4"
                                    value="<%=product.name%>">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputAddress">Product Type</label>
                            <input type="text" name="type" class="form-control" id="inputAddress"
                                value="<%=product.type%>">
                        </div>
                        <div class="form-group">
                            <label for="inputAddress2">Image Url</label>
                            <input type="text" name="imageURL" class="form-control" id="inputAddress2"
                                value="<%=product.imageURL%>">
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputCity">Product Price</label>
                                <input type="text" name="price" class="form-control" id="inputCity"
                                    value="<%=product.price%>">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="exampleFormControlTextarea4">Description</label>
                                <textarea value="<%=product.description%>" placeholder="Enter product description here"
                                    id="<%=product.description%>" name="description" class="form-control"
                                    id="exampleFormControlTextarea4" rows="3"></textarea>
                            </div>
                        </div> <br>
                        <button type="submit" class="btn btn-warning">submit</button>
                    </form>