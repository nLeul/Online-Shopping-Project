<%- include('../includes/head.ejs') %>

<body>

    <%- include('../includes/navigation.ejs') %>
    <div class="main-content">
        <div class="section-content section-content-p30">
            <div class="row">
                <a href="/savePrd" class="btn btn-warning">Add Product</a>
            </div>
            <br><br>
            <div class="container-fluid">
                <div class="row">
                    <% for(let products of productsList){ %>
                    <div class="col-md-2">
                        <div class="product-box">
                            <img src="<%=products.image%>" class="img-responsive" alt="image not found">
                            <h1>Name: <%=products.name%></h1>
                            <h1>Price: <%=products.price%> <span>&#36</span></h1>
                            <div class="price">Category: <%=products.category%></div>
                            <div class="price">Description: <%=products.description%></div>
                            <br>
                            <form method="POST" action="/delete-product/">
                                <input type="hidden" name="id" value="<%=products._id%>">
                                <button class="btn btn-danger">Delete</button>
                            </form>
                            <br>
                            <a style="margin-right: 1em;" href="/Edit-product/<%=products._id%>" class="btn btn-info">Edit</a>
                            <a href="/details/<%=products._id%>" class="btn btn-warning">View Details</a>

                        </div>
                    </div>

                    <% }%>

                </div>

            </div>

        </div>

    </div>


    <%- include('../includes/footer')%>
</body>

</html>