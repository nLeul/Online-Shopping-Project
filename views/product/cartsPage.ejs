<%- include('../includes/head.ejs') %>
<body>

    <%- include('../includes/navigation.ejs') %>
    <div class="main-content">
        <div class="section-content section-content-p30">
            <div class="row">
            </div>
            <div class="container-fluid">       
                <div class="price">Total Price is = <%=totalPrice%></div>
                <a href="/customer-prds" class="btn btn-info">Products </a>  
                <div class="row">
                    <% let count=0; for(let products of productsList){ %>
                    <div class="col-md-2">
                        <div class="product-box">
                            <img src="<%=products.image%>" class="img-responsive" alt="image not found">
                            <h1>Name: <%=products.name%></h1>
                            <h1>Price: <span>&#36</span> <%=products.price%> </h1>
                            <div class="price"> Catagory : <%=products.category%> </div>
                            <div class="price">Quantity : <%=qty[count++]%></div>
                            <a href="/delete-cart/<%=products._id%>" class="btn btn-danger">remove </a>
                          
                        </div>
                    </div>

                    <% }%>

                </div>

            </div>

        </div>

    </div>


    <%- include('../includes/footer')%>
</body>

</html>