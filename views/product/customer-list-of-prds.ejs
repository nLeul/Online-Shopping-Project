<%- include('../includes/head.ejs') %>
<body>

    <%- include('../includes/navigation.ejs') %>
   
            <div class="container">
                <div class="row">
                    <% for(let products of productsList){ %>
                    <div class="col-md-3">
                        <div class="panel panel-primary">
                         <div class="panel-body"><img src="<%=products.image%>" class="img-responsive" style="width:100%" alt="Image"></div>
                            <h1 style="font-size:small;">Name: <%=products.name%></h1>
                            <h1 style="font-size:small;">Price: <%=products.price%> <span>&#36</span></h1>
                            <div class="price"> Catagory:<%=products.category%> </div>
                            <div class="price">Description:<%=products.description%></div>
                    
                            <a style="font-size: medium;" href="/details/<%=products._id%>" class="">View Details </a>
                            <form method="POST" action="/add-to-product">
                                <input type="hidden" name="id" value="<%=products.id%>"><br>
                                <div>
                                 <label >Quantity</label>
                              <select id="" name="quantity">
                                  <% for( let i=1;i<10;i++){ %> 
                             <option value="<%=i%>"><%=i%> </option>
                                  <% } %> 
                                </select>
                                </div><br>
                                <button class="btn btn-info">add to Cart </button>
                            </form>
                        </div>
                    </div>

                    <% }%>

                </div>

            </div>
    <%- include('../includes/footer')%>
</body>

</html>